@model List<PersonViewModel>

@{
    ViewData["Title"] = "Список";
}
<div class="container">
    <div class="col-md-7 mx-auto text-center">
        <table class="table table-striped table-hover table-bordered">
            <thead class="">
                <tr>
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Дата рождения</th>
                    <th>Статус</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model)
                {
                    <tr>
                        <td>@person.FirstName</td>
                        <td>@person.LastName</td>
                        <td>@person.BirthDate.Date.ToShortDateString()</td>
                        <td>@EnumHelper.GetDisplayName(person.SocialStatus)</td>
                        <td>
                            <a class="btn btn-outline-secondary btn-sm" asp-controller="Person" asp-action="Edit" asp-route-Id="@person.Id" role="button"><i class="bi bi-pencil-square"></i></a>
                        </td>
                        <td>
                            <a class="btn btn-outline-danger btn-sm" asp-controller="Person" asp-action="Remove" asp-route-Id="@person.Id" role="button"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="text-center">
            <a class="btn btn-outline-success" asp-controller="Person" asp-action="Add" role="button"><i class="bi bi-person-plus-fill"></i>&nbsp;Добавить запись</a>
        </div>
    </div>
</div>
